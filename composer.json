{
    "name": "mnapoli/autoescape",
    "license": "MIT",
    "type": "library",
    "autoload": {
        "psr-4": {
            "Autoescape\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Autoescape\\Test\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.3",
        "ext-pdo": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5|^11|^12",
        "mnapoli/hard-mode": "^0.3.0",
        "phpstan/phpstan": "^1"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
